@using Microsoft.AspNetCore.Identity
@using GoldenLadle.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
<ul class="navbar-nav ml-auto">
    <div class="my-2 my-lg-0">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
            <li class="nav-item ">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link text-center">
                    Welcome <span id="userName">@UserManager.GetUserName(User)</span>!
                </a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-outline-success btn-block text-center">Log out</button>
            </li>
        </form>
    </div>
</ul>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item header-button"><a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-outline-success text-center">Register</a></li> &nbsp;
        <li class="nav-item header-button"><a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-outline-success text-center">Log in</a></li>
    </ul>
}
